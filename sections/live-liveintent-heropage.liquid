<section>
  <div class="relative overflow-hidden bg-white ">
    <div class="w-full sm:overflow-hidden">
      <img class="hidden object-cover object-center w-full h-full md:block md:object-top" style="max-height:"
        width="100%" height="100%"
        src="{{ section.settings.image1 | img_url: '1600x' }}">
      <img class="block object-cover object-center w-full h-full md:hidden md:object-top" style="max-height:"
        width="100%" height="100%"
        src="{{ section.settings.image2 | img_url: '1600x' }}">
    </div>
  </div>

</section>


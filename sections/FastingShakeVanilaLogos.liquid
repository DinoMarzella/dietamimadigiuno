{% assign data = section.settings %}

<div class="relative w-full bg-tarnspatrent flex flex-col md:flex-row justify-center items-center md:items-end overflow-hidden bg-no-repeat bg-cover bg-center md:bg-top bg-[url('{{ data.mobile_image | img_url: '600x' }}')] md:bg-[url('{{ data.desktop_image | img_url: '1600x' }}')]">
  <div class="relative w-full flex justify-center items-center z-10 md:min-h-[360px] ">
    <div class="w-full max-w-[960px] flex flex-col justify-center items-center mx-auto px-[20px] md:px-[0px] py-[20px] md:py-0">
      <img class="w-full object-contain max-w-[600px] mx-auto" src="{{ data.main_image | img_url: '700x' }}" alt="image" />
      <p class="mt-[30px] text-[{{data.text_color}}] font-[400] text-[18px] md:text-[21px] leading-[1.2] font-avenir text-center">
        {{ data.description }}
      </p>
    </div>
  </div>
</div>

{% schema %}
{ 
  "name": "Fasting Vanila Logos",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#754c28"
    }
  ],
  "presets": [
    {
      "name": "Fasting Vanila Logos",
      "category": "Custom"
    }
  ]
}
{% endschema %} 

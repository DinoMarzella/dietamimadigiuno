{% assign data = section.settings %}
<!-- TWTrustedBy -->
<div class="w-full pb-12  font-avenir">
  <div class="w-full px-4 mx-auto max-w-screen-2xl sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-center text-center md:flex-row">
      <div class="w-full p-2 md:px-2 md:w-1/2">
        <div class="flex items-center justify-center w-full h-40 rounded-lg bg-champagne md:h-60">
          <p class="max-w-xl mx-auto my-2 text-3xl font-normal leading-10 tracking-tight text-darkGunMetal md:text-5xl font-quincy">
            {{ data.left_title }}
          </p>
        </div>
      </div>
      <div class="w-full p-2 md:px-2 md:w-1/2">
        <div class="flex items-center justify-center w-full h-40 rounded-lg bg-champagne md:h-60">
          <p class="max-w-xl mx-auto my-2 text-xl font-normal leading-10 tracking-tight text-darkGunMetal md:text-28 font-quincy">
            {{ data.right_title }}
          </p>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-stretch justify-center text-center md:flex-row">
      {% assign cards = section.blocks | where: 'type', 'cards' %}
      {% for cardMain in cards %}
        {% assign card = cardMain.settings %}
        <div class="flex flex-col items-stretch w-full p-2 overflow-hidden md:px-2 md:flex-row md:w-1/4">
          <div class="relative w-full overflow-hidden rounded-md bg-champagne">
            <div class="absolute z-0 w-full h-full overflow-hidden">
              <img
                class="relative object-cover object-center w-full h-full"
                width="100%"
                height="100%"
                src="{{ card.image | img_url: 'master' }}"
              >
            </div>
            <div class="relative z-10 flex flex-col items-center justify-center w-full p-4 py-8 rounded-lg">
              <div
                class="flex items-center justify-center bg-white rounded-full w-52 h-52"
                style="box-shadow: 0px 30px 30px 0px rgb(13 98 92 / 5%), 0px 80px 67px 0px rgb(13 98 92 / 7%)"
              >
                <h4
                  class="text-4xl text-center md:text-5xl font-avenirItalic text-prolon_green"
                  style="letter-spacing: 1px;"
                >
                  {{ card.title }}
                </h4>
              </div>
              {%- if card.description -%}
                <div class="pt-10 font-dinamoRegular letter-spacing: 1px;" style="letter-spacing: 1px;">
                  {{ card.description }}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="w-full p-2">
      <div class="flex flex-col items-center justify-around py-10 overflow-hidden text-center rounded-lg md:flex-row bg-champagne">
        {% assign logos = section.blocks | where: 'type', 'logos' %}
        {% for cardMain in logos %}
          {% assign card = cardMain.settings %}
          <div class="flex items-center justify-center h-10 my-4 w-44 max-h-8 md:my-0">
            <img
              class="relative object-contain object-center max-h-10"
              width="100%"
              height="100%"
              src="{{ card.image | img_url: '1200x' }}"
            >
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trusted By TW",
  "settings": [
    {
      "type": "textarea",
      "id": "left_title",
      "label": "Left Title"
    },
    {
      "type": "textarea",
      "id": "right_title",
      "label": "Right Title"
    }
  ],
  "blocks": [
    {
      "type": "cards",
      "name": "Cards",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "logos",
      "name": "Logos",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}


<div class="w-full mx-auto md:max-w-screen-xl font-harmonia">
      <div class="relative flex flex-col items-center justify-center w-full px-5 py-12 md:py-24 md:px-10">
        {%- if section.blocks.size > 0 -%}
          {% for card in section.blocks %}
            {% assign data = card.settings %}
            {%- if data.image_left -%}{%- endif -%}
              <div class="flex items-center justify-center w-full flex-col md:flex-row {% if data.image_left == false %} md:flex-row-reverse {% endif %} py-5 md:py-10 ">
                  <div class="flex items-center justify-center md:items-end md:justify-end w-full w-ful md:w-1/3 {% if data.image_left == false  %} md:items-start md:justify-start {% endif %}">
                    <img
                      class="block object-cover object-center w-full h-full"
                      width="100%"
                      height="100%"
                      src="{{ data.image | img_url: '600x' }}"
                      style="height:100%; width:100%; max-height:520px;"
                    >
                  </div>
                  <div class="flex items-center justify-center w-full md:w-2/3 {% if data.image_left == false %} md:justify-end {% else %} md:justify-start {% endif %} px-6 md:p-0">
                    <div class="relative w-full p-5 md:p-10 -top-32 -mb-32 md:-mb-0 md:-top-0 {% if data.image_left == false  %} md:-right-8 {% else %} md:-left-8 {% endif %} max-w-86 md:max-w-184" style="background-color: #f3fae8; border: 1px solid #749550;">
                      <h3 class="w-full pb-1 text-2xl font-bold text-center md:text-left md:text-28 font-harmonia" style="color:#78a14a;">{{ data.date }}</h3>
                      <h4 class="w-full py-2 text-lg font-bold text-center md:text-left md:text-xl font-harmonia" style="color:#78a14a;">{{ data.name }}</h4>
                      <div class="max-w-6xl py-4 mx-auto text-base text-center md:text-left font-harmonia " style="color:#002500;">{{ data.description }}</div>
                      <div class="flex justify-center w-full md:justify-start item-center ">
                        <a href="{{ data.button_url }}">
                          <div class="inline-flex justify-center p-3 text-base font-bold text-center text-white rounded font-avenir active:shadow-sm border-prolon_primary bg-buttonGreen w-60 md:w-52">
                            {{ data.button_text }}
                          </div>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
          {% endfor %}
        {%- endif -%}
      </div>
</div>

{% schema %}
{
  "name": "Fasting Group Card TW",
  "settings": [
  ],
  "blocks": [
    {
      "type": "Cards",
      "name": "cards",
      "settings": [
        {
          "type": "textarea",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "textarea",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Url"
        },
        {
          "type": "checkbox",
          "id": "image_left",
          "label": "Image On Left",
          "default": true
        }
      ]
    }
  ]

}
{% endschema %}

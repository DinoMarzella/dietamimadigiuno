"label": "CTA Text",
"default": "<span>Subscribe & Beneift</span> <span> - </span> <span> $185.00</span>"
},
{
"type": "url",
"id": "cta_link",
"label": "CTA Link"
},
{
"type": "checkbox",
"id": "block_layout",
"label": "Block Layout",
"default": false
},
{
"type": "textarea",
"id": "addclass",
"label": "desktop view"
},
{
"type": "textarea",
"id": "addclass_2",
"label": "mobile view"
}
],
"blocks": [

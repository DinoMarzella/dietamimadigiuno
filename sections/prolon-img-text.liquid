<section class=" max-w-[1220px] mx-auto py-[20px] md:py-[40px] px-[20px] text-black bg-white">
    <div
        class="flex  {% if section.settings.reverse_layout %}lg:flex-row-reverse{% else %}lg:flex-row{% endif %} flex-col items-center justify-between gap-[20px] lg:gap-[40px]">
        <div class="lg:w-[50%] w-full">
            <div class="{{ section.settings.addclass_2 }} ">
                <h2 class="md:text-[48px] text-[27px] text-black font-[500]">{{ section.settings.title }}</h2>
                <p class="text-[12px] md:text-[16px]">{{ section.settings.description }}</p>
            </div>
            <img class="object-cover w-full "
                src="{{ section.settings.img |  img_url: '1600x'}}">
        </div>
        <div class="lg:w-[50%] w-full md:{{ section.settings.padding_left }}">
            <div class="lg:max-w-[616px] mx-auto">
                <span class="text-[12px] ">{{ section.settings.small_text }}</span>
                <div class=" {{section.settings.addclass}} ">
                    <h2 class="md:text-[48px] text-[27px] leading-[1.2] text-black font-[500]">{{ section.settings.title
                        }}</h2>
                    <p class="text-[12px] md:text-[16px] pt-[20px]">{{ section.settings.description }}</p>
                </div>

                <div class="text-black"> 
                    {{ section.settings.code }}
                </div>
                <div
                    class=" grid-cols-2 pt-[15px] md:pt-[17px] gap-[13px] {% if section.settings.block_layout %}hidden{% else %} !grid {% endif %} ">
                    {% for block in section.blocks %}
                    <div>
                        <h2 class="text-[20px] text-black md:text-[32px] font-[500]">{{ block.settings.heading }}</h2>
                        <p class="text-[11px] md:text-[16px]">{{ block.settings.discription2 }} </p>
                    </div>
                    {% endfor %}
                </div>
                <div
                    class="bg-[#73984a] mt-[20px] rounded-[36px] {% if section.settings.btn_layout %}hidden{% else %} block {% endif %} max-w-[450px] mx-auto  text-white py-[11px]">
                    <a href="{{ section.settings.cta_link  }}">
                        <div class="flex items-center gap-2 text-[12px] ] justify-center w-full">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" class="md:w-[16px] w-[14px] h-[14px] md:h-[16px]" width="16" height="16" viewBox="0 0 12 12"
                                    fill="none">

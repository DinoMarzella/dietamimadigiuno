{% assign data = section.settings %}
<!-- TWProlonLogos -->
<div class="py-5 md:py-8 lg:overflow-hidden bg-saladGreen">
  <div class="mx-auto max-w-screen-2xl lg:px-8">
    <div class="flex justify-center item-center">
      {%- if section.blocks.size > 0 -%}
        {% for logo in section.blocks %}
          <div key="{logo.id}" class="px-4" style="max-width:120px;">
            <img
              class="object-contain object-right w-full h-full"
              width="100%"
              height="100%"
              src=""
              {{ logo.settings.image | img_url: 'master' }}
            >
          </div>
        {% endfor %}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Prolon Logos TW",
  "settings": [],
  "blocks": [
    {
      "type": "logos",
      "name": "Logos",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}

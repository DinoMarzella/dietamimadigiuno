      padding-top: {{ mobile_top_padding }}rem;
      padding-bottom: {{ mobile_bottom_padding }}rem;
    }
  }
</style>

<div class="tvg_facts_accordion_luWxJq_FactsAccordion-container js-accordion-facts">

  <div class="tvg_facts_accordion_luWxJq_FactsAccordion-header">
    <h2>
      {{ header }}
    </h2>
  </div>

  {% if cta_url != blank and cta_text != blank %}
    <div class="tvg_facts_accordion_luWxJq_FactsAccordion-cta">
      <p class="tvg_facts_accordion_luWxJq_FactsAccordion-cta__copy">
        {{ mobile_copy }}
      </p>

      {% liquid
        render 'cta-button', cta_link: cta_url, cta_text: cta_text
        render 'cta-button-stylesheet'
      %}
    </div>
  {% endif %}

  <div class="tvg_facts_accordion_luWxJq_FactsAccordion-grid">
    <div class="tvg_facts_accordion_luWxJq_FactsAccordion-items">

      {% for block in section.blocks %}
        {% liquid
          assign title = block.settings.title
          assign description = block.settings.description
          assign image = block.settings.image
          assign show_stats = block.settings.show_stats
          assign show_image = block.settings.show_image

          if image != blank
            capture image_sizes
              render 'print-responsive-image', wide_image: image, narrow_image: image, breakpoi√•t: 1024
            endcapture
          endif
        %}
        <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item" >
          <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item__accordion">
            <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item__title js-accordion-facts-item {% if forloop.first %}--is-active{% endif %}" data-accordion-item="{{ forloop.index }}">
              <h3>
                <span>{{ forloop.index | append: '.' }}</span> {{ title }}
              </h3>
              <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item__plus">
                {% render 'svg-plus-icon' %}
              </div>
              <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item__minus">
                {% render 'svg-minus-icon' %}
              </div>
            </div>

            <div class="tvg_facts_accordion_luWxJq_FactsAccordion-description js-accordion-facts-description {% if forloop.first %}--is-active{% endif %}" data-accordion-item="{{ forloop.index }}">
              <div class="tvg_facts_accordion_luWxJq_FactsAccordion-item__description">
                {{ description }}
              </div>

              <div class="tvg_facts_accordion_luWxJq_FactsAccordion-stats {% if show_stats %} stats {% else %} no-stats {% endif %} {% if show_image == false %} no-image {% endif %}">
                <div class="tvg_facts_accordion_luWxJq_FactsAccordion-stats__wrapper">
                  {% if show_stats %}

                    {% for stat in (1..6) %}
                      {% capture stat_key %}stat_{{ stat }}{% endcapture %}
                      {% capture stat_value_key %}stat_{{ stat }}{% endcapture %}
                      {% capture stat_label_key %}stat_{{ stat }}_label{% endcapture %}
                      {% assign stat_value = block.settings[stat_value_key] %}
                      {% assign stat_label = block.settings[stat_label_key] %}

                        <div class="tvg_facts_accordion_luWxJq_FactsAccordion-stat">
                          <span class="tvg_facts_accordion_luWxJq_FactsAccordion-stat__value">{{ stat_value }}</span>
                          <span class="tvg_facts_accordion_luWxJq_FactsAccordion-stat__label">{{ stat_label }}</span>
                        </div>
                    {% endfor %}

                  {% endif %}
                </div>
                {% if image != blank %}
                  <picture
                    data-feature-item="{{ forloop.index }}"
                    class= "tvg_facts_accordion_luWxJq_FactsAccordion-image js-product-features-image {% if show_stats %} small {% else %} large {% endif %} {% if show_image %} image {% else %} no-image {% endif %}"
                  >
                    {{ image_sizes }}
                  </picture>
                {% endif %}
              </div>

            </div>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>

</div>


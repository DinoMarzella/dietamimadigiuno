<!-- image-with-content-pro.liquid -->
<style>
    *{
  margin:0px;
  padding:0px;
  box-sizing:border-box;
}
._site_banner_lp{
  display:flex;
  justify-content:center;
  align-items:center;
  width:100%;
}
._parent_row_wrap{
  display:flex;
  justify-content:center;
  align-items:center;
  width:100%;
}
._left_child_col{
  display:flex;
  justify-content:center;
  align-items:center;
  flex:1;
  width:100%;
  
}
._right_child_col{
  display:flex;
  justify-content:center;
  align-items:center;
  flex:1;
  width:100%;
}
._right_child_col img{
  width:100%;
}
._sub_child_wrap{
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:flex-start;
  width:100%;
  max-width:450px;
  gap:20px;
  color:#FFFFFF;
}
._sub_child_wrap img{
  width:80%;
}
.lists_sub_links{
  display:flex;
  gap:50px;
  margin-top:15px;
}
.lists_sub_links li{
  list-style-type:none;
  font-size:20px;
  line-height:1.3;
}

@media(max-width:767px){
  ._parent_row_wrap{
    display:flex;
    flex-direction:column-reverse;
  }
  ._left_child_col{
    padding:30px;
  }
}
</style>
<div class="_site_banner_lp">
    <div class="_parent_row_wrap" style="background:{{section.settings.color_picker}}">
      <div class="_left_child_col">
        <div class="_sub_child_wrap">
          <h1>{{section.settings.header_title}}</h1>
          <img src="{{section.settings.image_content_low | img_url: '1200x'}}">
          <div class="lists_sub_links">
            <div class="_left_links">
           {{section.settings.left_type_links}}
              </div>
            <div class="_right_links">
                {{section.settings.right_type_links}}
            </div>
            </div>
        </div>
      </div>
      <div class="_right_child_col">
        <img src="{{section.settings.right_main_image | img_url: '1000x'}}">
      </div>
    </div>
  </div>
 
  {% schema %}
  {
    "name": "Image With Text Pro",
 
    "settings": [
      {
        "type": "color",
        "id": "color_picker",
        "label": "Add Color Hex Code"
      },
      {
        "type": "image_picker",
        "id": "right_main_image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_content_low",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "header_title",
        "label": "Title",
        "default": "Image with text"
      },
      {
        "type": "html",
        "id": "left_type_links",
        "label": "Left List"
      },
      {
        "type": "html",
        "id": "right_type_links",
        "label": "Right Links"
      }
 
    ]
  }
  {% endschema %}
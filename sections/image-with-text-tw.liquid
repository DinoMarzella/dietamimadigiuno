{% assign data = section.settings %}
<!-- TWImageWithText -->
<div class='py-6 lg:overflow-hidden font-harmonia md:py-12 {%- if data.remove_padding %} md:py-0 {%- endif -%}' style="background-color: {{data.background_color}}">  
  {% if data.pretitle.size > 0 %}
  <h1 class="flex justify-center mx-auto mb-16 text-center uppercase font-harmonia item-center">{{data.pretitle}}</h1>
  {% endif %}
  <div class="mx-auto {% if data.full_width %}w-full{% else %} max-w-screen-2xl lg:px-8{% endif %} ">
      <div class='flex flex-col items-center justify-center md:flex-row {%- if data.image_on_left %} md:flex-row-reverse {%- endif -%}'>
          <div class="w-full max-w-2xl px-4 mx-auto sm:px-6 lg:flex lg:items-center lg:px-0 {%- if data.image_sf %} md:w-1/4{% else %} md:w-1/2 {%- endif -%}">
              <div class="">
                {%- if data.tag -%}
                  <p class="px-5 text-sm font-light tracking-tight text-center md:px-10 md:text-left font-harmonia">{{data.tag}} </p>
                {%- endif -%}
                {%- if data.title -%}
                  <h2 class="px-5 my-4 text-3xl font-bold tracking-tight text-center md:px-10 md:text-left md:text-4xl sm:my-5 lg:my-6" >
                    <span class="block text-center text-black md:text-left font-avant">{{data.title}}</span>
                </h2>                
              {%- endif -%}
              {%- if data.description -%}
                <div class='px-5 text-lg text-left text-black md:px-10 font-avenir'>  
                  {{data.description}}              
                </div>               
            {%- endif -%}

            <div class='items-start justify-start w-full max-w-sm px-5 mx-auto mt-5 md:px-10 sm:flex sm:max-w-none'>
              {%- if section.blocks.size > 0 -%}
                  {% for button in section.blocks %}
                      <div>
                          {%- render 'TWButtons', button: button-%}
                      </div>
                  {% endfor %}
              {%- endif -%}
          </div>
              </div>
          </div>
          <div class="relative w-full py-6 mx-auto md:py-0 {% if data.full_width %}mx-0{% endif %}" style="max-width:{{data.image_max_width}}">

              {% if data.use_video_html %}
                  {{data.overide_image}}
                {% else %} 
              <img class="object-cover object-right w-full h-full" width='100%' height='100%' src={{ data.image | img_url: 'master'  }} />
              {% endif %}
 
          </div>
      </div>
  </div>
</div>

{% schema %}
{
    "name": "Image With Text TW", 
    "settings": [
    {
      "type": "text",
      "id": "pretitle",
      "label": "Pre Title"
    },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Description"
      },
       {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "use_video_html",
        "label": "Use Video / Html"
      },
      {
            "type": "html",
            "id": "overide_image",
            "label": "Video / Html Iframe "
      }, 
      {
        "type": "checkbox",
        "id": "image_on_left",
        "label": "Image On Left"
      },
      {
        "type": "checkbox",
        "id": "image_sf",
        "label": "Image width 75%"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full Width",
       "default": false
      }, 
      {
        "type": "checkbox",
        "id": "remove_padding",
        "label": "Remove Top Bottom Padding"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "image_max_width",
        "label": "Image Max Width"
      },
      {
        "type": "text",
        "id": "tag",
        "label": "Tag"
      }
    ],
    "blocks": [
      {
        "type": "buttons",
        "name": "Buttons",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Url"
          },
      {
        "type": "select",
        "id": "button_type",
        "label": "Button Type",
        "default": "primary",
        "options": [
          {
            "label": "primary",
            "value": "primary"
          },
          {
            "label": "secondary",
            "value": "secondary"
          }
        ]
      }
        ]
      }
    ],
    "presets": [
          {
            "name": "Image With Text TW"
          }
    ]
  }
{% endschema %}
{% assign data = section.settings %}
<!-- prolon-transform-v1-tw -->
<div class="w-full pt-12 pb-20 font-harmonia" style="background-color: {{data.bg_color}}">
  <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="mt-2 text-3xl font-bold leading-8 tracking-tight text-white sm:text-4xl">{{data.title}}</p>
    </div>

    <div class="mt-10">
      <dl class="flex flex-col flex-wrap items-center justify-center md:flex-row">
        <hr class="relative hidden w-20 h-1 border-t border-white md:block">
        
        {% for block in section.blocks %}
        {% if block.type == 'cards' %}
          <div key="{{block.id}}" class="relative flex flex-col items-center justify-center w-40 h-40 p-4 mx-0 my-3 border-2 border-white border-solid rounded-full md:my-0 md:mx-3 md:p-3">
            <img class="max-w-[90px]" src="{{block.settings.bimg | img_url: '3000x'}}" />
          </div>
          {% endif %}
          {% if block.type == 'line' %}
          <div key="{{block.id}}" class="relative flex flex-col items-center justify-center w-48 p-2 mx-0 my-3 md:my-0 md:mx-3 md:p-3">
            <hr class="relative w-44 h-1 border-t border-white md:block">
            <p class="text-white text-xs w-full text-center mx-auto absolute top-[-10px]" >{{block.settings.title}}</p>
          </div>
          {% endif %}
          {% endfor %}
        <hr class="relative hidden w-20 h-1 border-t border-white md:block">
      </dl>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Prolon Transform V1 TW",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#73984A"
    }
  ],
  "blocks": [
    {
      "type": "cards",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "bimg",
          "label": "Image"
        }
      ]
    },
    {
      "type": "line",
      "name": "Line",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "Prolon Transform V1 tw",
        "blocks": [
          {
            "type": "cards"
          }
        ]
      }
    ]
}
{% endschema %}

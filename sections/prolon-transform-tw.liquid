{% assign data = section.settings %}
<!-- TWProlonTransform -->
<div class="w-full pt-12 pb-20 font-harmonia" style="background-color: {{data.bg_color}}">
  <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="mt-2 text-3xl font-bold leading-8 tracking-tight text-white sm:text-4xl">{{ data.title }}</p>
    </div>
    <div class="mt-2 text-base leading-8 tracking-tight text-center text-white">
      {{ data.description }}
    </div>

    <div class="mt-10">
      <dl class="flex flex-col flex-wrap items-center justify-center md:flex-row">
        <hr class="relative hidden w-32 h-1 border-t border-white md:block">
        {% assign cards_block = section.blocks | where: 'type', 'cards' %}
        {% for card in cards_block %}
          <div
            key="{card.id}"
            class="relative flex flex-col items-center justify-center w-40 h-40 p-4 mx-0 my-3 border-2 border-white border-solid rounded-full md:my-0 md:mx-3 md:p-3"
          >
            <p class="mt-2 text-3xl font-semibold leading-6 text-center text-white">{{ card.settings.title }}</p>
            <p class="mt-4 text-base text-center text-white">{{ card.settings.description }}</p>
          </div>
        {% endfor %}
        <hr class="relative hidden w-32 h-1 border-t border-white md:block">
      </dl>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Prolon Transform TW",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#73984A"
    }
  ],
  "blocks": [
    {
      "type": "cards",
      "name": "Card",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "Prolon Transform tw",
        "blocks": [
          {
            "type": "cards"
          }
        ]
      }
    ]
}
{% endschema %}

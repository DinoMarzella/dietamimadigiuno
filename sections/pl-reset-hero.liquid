{%- assign data = section.settings -%}

<div>
  <section
    class="relative  overflow-hidden pl-wrapper-reset-hero"
  >
    <div class="relative ">
      <div class="absolute inset-0 w-full sm:overflow-hidden">
        <div class="object-cover w-full h-full">
          <img
            class="hidden object-cover object-center w-full h-full md:block"
            width="100%"
            height="100%"
            src='{{ data.image_desktop | img_url: '1800x' }}'
          />
          <img
            class="block object-cover object-bottom w-full h-full md:hidden"
            src='{{ data.image_mobile | img_url: '700x' }}'
          />
        </div> 
      </div>
      <div class="mx-auto max-w-[1600px] sm:px-6 lg:px-8">
        <div class="relative flex sm:overflow-hidden h-[850px] md:h-[600px] justify-end items-end">
          <div class="relative flex flex-col items-start justify-center max-w-3xl px-4 sm:px-6 md:px-8 md:pl-20">
            <div
              class="text-xl text-black  p-[10px] md:p-[70px]"
            >
              {{ data.description }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  $(document).ready(function () {
    addClassInViewSequentially('pl-wrapper-reset-hero');
  });
</script>

{% schema %}
{
  "name": "PL Reset Hero",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "ProLon is the only nutrition program patented for promoting longevity through <span class='text-[#73994a] italic font-semibold'>cellular rejuvenation </span>"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    }
  ],
  "presets": [
    {
      "name": "PL Reset Hero",
      "category": "Advanced layout"
    }
  ]
}
{% endschema %}

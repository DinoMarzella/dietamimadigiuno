<style>
  .color-scheme-3{
    background: #73984a;
  }
  .testimonials-slider__text {
    margin: 0 30px 15px;
    padding: 30px 15px;
    background: {{ settings.color_body_bg | default: "#fff" }}
    ;
    background: var(--colorBody);
    color: {{ settings.color_body_text | default: "#1c1d1d" }}
    ;
    color: var(--colorTextBody);
    }
    
    @media only screen and (min-width:769px) {
    
    .testimonials-slider__text {
      margin: 0;
      padding: 30px;
    }
    }
    
    .testimonials-slider__text cite {
    font-style: normal;
    font-weight: 700
    }
    
    @media only screen and (min-width:769px) {
    
    .testimonials-slider__text cite {
      font-size: calc(var(--typeBaseSize) + 1px)
    }
    }
    
    .testimonials-slider__text p {
    margin-bottom: 7.5px
    }
    
    .testimonials-slider__text p + cite {
    margin-top: 0;
    }
    #shopify-section-template--16170226090142__16801324-f6c3-48a2-a4a3-48d411e744df h2{
      color: white !important;
    }
</style>
<div
  class="testimonials-section testimonials-{{ section.id }} text-{{ section.settings.align_text }} color-scheme-{{ section.settings.color_scheme }} py-[40px] md:py-[60px] relative " style="z-index:1"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials">
  {%- if section.settings.color_scheme != 'none' -%}
    {%- render 'color-scheme-texture', color_scheme: section.settings.color_scheme -%}
  {%- endif -%}

  {%- if section.settings.title != blank -%}
    <div class="page-width">
      <div class="section-header">
        <h2 class="font-[500] text-[30px] md:text-[38px] leading-[38px] md:leading-[46px]">{{ section.settings.title | escape }}</h2>
      </div>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
    <div class="slideshow-wrapper">
      <div
        class="testimonials-slider"
        id="Testimonials-{{ section.id }}"
        data-dots="true"
        data-count="{{ section.blocks.size }}">
        {%- for block in section.blocks -%}
          <div
            class="testimonials-slide testimonials-slide--{{ block.id }}"
            data-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}>
            <blockquote class="testimonials-slider__text">
              {%- if block.settings.icon == 'quote' -%}
                <span class="quote-icon"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-quote" viewBox="0 0 41 35"><path d="M10.208 17.711h6.124v16.332H0V21.684C0 8.184 5.444.956 16.332 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766zm24.498 0h6.124v16.332H24.498V21.684C24.498 8.184 29.942.956 40.83 0v6.125c-4.083 1.14-6.124 4.414-6.124 9.82v1.766z" fill="#000" fill-rule="evenodd"/></svg></span>
              {%- elsif block.settings.icon == '5-stars' -%}
                <span class="testimonial-stars">★★★★★</span>
              {%- elsif block.settings.icon == '4-stars' -%}
                <span class="testimonial-stars">★★★★</span>
              {%- elsif block.settings.icon == '3-stars' -%}
                <span class="testimonial-stars">★★★</span>
              {%- elsif block.settings.icon == '2-stars' -%}
                <span class="testimonial-stars">★★</span>
              {%- elsif block.settings.icon == '1-star' -%}
                <span class="testimonial-stars">★</span>
              {%- endif -%}

              {%- if block.settings.testimonial != blank -%}
                <div class="rte-setting text-spacing">{{ block.settings.testimonial }}</div>
              {%- endif -%}

              {%- if block.settings.image != blank -%}
                <div class="testimonail-image{% if section.settings.round_images %} testimonail-image--round{% endif %}">
                  <div class="text-spacing" >
                    {%- assign img_url = block.settings.image | img_url: '250x' -%}
                    <img class="w-[140px] h-[140px]" src="{{ img_url }}" alt="{{ block.settings.image.alt }}">
                  </div>
                </div>
              {%- endif -%}

              {%- if block.settings.author != blank -%}
                <div class="font-bold text-[16px]">{{ block.settings.author | escape }}</div>
              {%- endif -%}
              {%- if block.settings.author_info != blank -%}
                <div class="testimonials__info">{{ block.settings.author_info | escape }}</div>
              {%- endif -%}
            </blockquote>
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>


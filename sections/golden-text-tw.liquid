{% assign data = section.settings %}
<!-- TWGoldenText -Haider -->
<div class="flex justify-center items-center w-full bg-[{{data.bgcolor}}]">
  <div class="flex flex-col items-center justify-center w-full py-8 text-center text-white">
    <h1 class="px-5 text-[26px] md:text-[32px] leading-[30px] md:leading-[38px] font-[500] text-black">{{ data.title }}</h1>
    <p class="px-5 pt-4 text-lg page-width ">{{ data.details }}</p>
    {% if data.imagepro %} 
      <div class="flex mt-5 mb-5 md:my-10">
        <img src="{{data.imagepro | img_url: '3000x'}}">
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Rich Text TW",
  "settings": [
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "details",
      "label": "Details"
    },
    {
      "type": "image_picker",
      "id": "imagepro",
      "label": "Image"
    } 
   
  ],
  "presets": [
          {
            "name": "Rich Text TW"
          }
    ]
}
{% endschema %}

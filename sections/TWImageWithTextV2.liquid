{% assign data = section.settings %}
<!-- TWVideoWithTextV1 -->
<div class="py-6 bg-white md:py-12 overflow-hidden">
  <div class="mx-auto lg:px-8" style="max-width: 1440px;">
    <div class="flex flex-col justify-center items-strech md:flex-row rounded-xl overflow-hidden">
      <div class="relative w-full md:w-3/5">
        <div class="z-10 overflow-hidden">
          <img
            class="object-cover  w-full h-full cursor-pointer md:min-h-[520px] object-center"
            style="max-height: 486px;"
            width="100%"
            height="100%"
            src="{{ data.image | img_url: '800x' }}"
          >
        </div>
      </div>
      <div class="w-full overflow-hidden md:w-2/5">
        <div class="w-full h-full px-4 mx-auto max-w-2xl sm:px-6 flex items-center justify-center lg:px-0" style="background: #FDF2E4">
          <div class="px-4 py-4 md:px-8">
            <p class="w-full text-center md:text-left tracking-wider text-lg text-black font-avenir pb-3">{{ data.tag }}</p>
            <h1 class="mb-4 text-3xl text-center md:text-left md:text-5xl sm:mb-5 lg:mb-6 font-avant ">
              <span class="block text-black" style="text-transform: none;">{{ data.title }}</span>
            </h1>
            <div class="p-1 text-center md:text-left text-lg md:text-xl text-black font-avenir">
              {{ data.description }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text V2 TW",
  "settings": [
    {
      "type": "textarea",
      "id": "tag",
      "label": "Tag"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}

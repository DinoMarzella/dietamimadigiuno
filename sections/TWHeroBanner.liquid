      "label": "Text Position",
      "default": "md:items-center md:justify-center",
      "options": [
        {
          "label": "right_bottom",
          "value": "md:items-end md:justify-end"
        },
        {
          "label": "left_bottom",
          "value": "md:items-end md:justify-start"
        },
        {
          "label": "left_center",
          "value": "md:items-center md:justify-start"
        },
        {
          "label": "right_top",
          "value": "md:items-start md:justify-end"
        },
        {
          "label": "right_center",
          "value": "md:items-center md:justify-end"
        },
        {
          "label": "left_top",
          "value": "md:items-start md:justify-start"
        },
        {
          "label": "center",
          "value": "md:items-center md:justify-center"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_position_mobile",
      "label": "Text Position Mobile",
      "default": "items-end",
      "options": [
        {
          "label": "top",
          "value": "items-start"
        },
        {
          "label": "center",
          "value": "items-center"
        },
        {
          "label": "bottm",
          "value": "items-end"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "default": "md:object-right",

        {
          "label": "left",
          "value": "md:object-left"
        },
        {
          "label": "right",
          "value": "md:object-right"
        },
        {
          "label": "top",
          "value": "md:object-top"
        },
        {
          "label": "bottom",
          "value": "md:object-bottom"
        },
        {
          "label": "center",
          "value": "md:object-center"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_position",
      "label": "Button Position",
      "default": "justify-start md:justify-start",
      "options": [
        {
          "label": "left",
          "value": "justify-start md:justify-start"
        },
        {
          "label": "right",
          "value": "justify-end md:justify-end"
        },
        {
          "label": "center",
          "value": "justify-center md:justify-center"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "under_header",
      "label": "Under Header",
      "default": true
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "TextColor",
      "default":"#000000"
    }
  ],
  "blocks": [
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Url"
        },
        {
          "type": "select",
          "id": "button_type",
          "label": "Button Type",
          "default": "primary",
          "options": [
            {
              "label": "Primary",
              "value": "primary"
            },
            {
              "label": "Secondary",
              "value": "secondary"
            },
            {
              "label": "Green",
              "value": "green"
            }
          ]
        }
      ]
    }
  ]

{% assign data = section.settings %}
<!-- TWHEROBANNER -->
<div class="relative {% if data.under_header %} md:pt-32 md:-mt-40{% endif %} ">
  <div class="absolute inset-0 w-full sm:overflow-hidden">
    <div class="object-cover w-full h-full">
      {% if data.use_video_html %}
        {{data.overide_image}}
      {% else %} 
        <img
          class="hidden object-cover object-center w-full h-full md:block {{section.settings.image_position}}"
          width="100%"
          height="100%"
          src="{{ data.desktop_image | img_url: '1800x' }}"
        >
        <img
          class="block object-cover object-bottom w-full h-full md:hidden"
          src="{{ data.mobile_image | img_url: '700x' }}" 
        >
    {% endif %}
    </div>
  </div>
  <div class="mx-auto max-w-screen-2xl sm:px-6 lg:px-8 font-harmonia">
    <div class="relative flex sm:overflow-hidden h-200 md:h-160 justify-end {{section.settings.content_position_mobile}} {{section.settings.text_position_hero}}">
      <div class="relative flex flex-col items-start justify-center max-w-3xl px-4 sm:px-6 md:px-8 md:pl-20">
        {% if data.tag%}
        <h3 class="w-full pt-20 text-xl text-black text-start md:text-3xl md:pt-0 font-harmonia" style="color:{{data.text_color}}">{{ data.tag }}</h3>
        {% endif %} 
        <h1 class="py-3 text-3xl font-extrabold tracking-tight text-black text-start md:text-5xl font-harmonia">
          <span class="block text-black font-harmonia" style="color:{{data.text_color}}">{{ data.title }}</span>
        </h1>
        {%- if data.description -%}
          <div class="text-xl text-black font-harmonia" style="color:{{data.text_color}}">
            {{ data.description }}
          </div>
        {%- endif -%}
        <div class="w-full max-w-lg mt-5 mb-5 md:mt-5 md:mb-0 flex {{section.settings.button_position}}">
          {%- if section.blocks.size > 0 -%}
            {% for button in section.blocks %}
              <div>
                {%- render 'TWButtons', button: button - %}
              </div>
            {% endfor %}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner TW",
  "settings": [
    {
      "type": "textarea",
      "id": "tag",
      "label": "Tag",
      "default": "Tag"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descreption",

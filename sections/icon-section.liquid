{% if section.settings.space_around %}
  <section class="my-6 {{section.settings.custom_class}}">
{% endif %}

{% if section.settings.full_width %}
  <div class="page-width {{section.settings.custom_class}}">
{% endif %}

<div class="text-center py-5  loaded_animation">
  {% assign blockSize = section.blocks.size %}
  <div class="flex flex-wrap gap-[30px] {% if blockSize <= 6 %} md:w-2/3 mx-auto {% endif %} justify-center md:items-center hero__animation-contents !delay-200">
    {% for block in section.blocks %}
    <div class="flex {% if blockSize > 6 %} md:w-[20%] {% else  %} md:w-[24%] {% endif %}  w-[40%] justify-center items-center md:h-1/2  gap-2">
        <div class="flex-initial">
          {% if block.settings.image_icon != blank %}
            <div class="relative w-[50px] h-[50px]">
              {{ block.settings.image_icon | image_url: width: 70 | image_tag }}
            </div>
          {% endif %}
        </div>

        <div class="flex-1 text-left">
          <h6 class="font-semibold text-black text-xs md:text-base tracking-tighter capitalize">
            {{ block.settings.item_heading }}
          </h6>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size == 0 %}
    <div class="page-width">
      <div class="grid">
        <div class="grid__item">
          <div class="rte">
            {{ 'home_page.onboarding.no_content' | t }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
</div>

{% if section.settings.full_width %}
  </div>
{% endif %}
{% if section.settings.space_around %}
  </section>
{% endif %}


{% schema %}
  {
    "name": "Feature Icon Section",

    "max_blocks": 8,

    "settings": [
      {
        "type": "checkbox",

        "id": "full_width",

        "label": "Full page width",

        "default": false
      }, {
        "type": "checkbox",

        "id": "space_around",

        "label": "Add spacing above and below",

        "default": true
      }, {
        "type": "textarea",

        "id": "custom_class",

        "label": "Custom Class"
      }
    ],

    "blocks": [
      {
        "type": "item_box",

        "name": "Box Item",

        "settings": [
          {
            "type": "image_picker",

            "id": "image_icon",

            "label": "Image Icon"
          }, {
            "type": "text",

            "id": "item_heading",

            "label": "item Box Heading"
          }
        ]
      }
    ],

    "presets": [
      {
        "name": "Featured Icon Section"
      }
    ]
  }
{% endschema %}
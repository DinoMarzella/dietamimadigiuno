{% assign data = section.settings %}
<!-- TWImageTextColumn -->
<div class="w-full py-12 bg-white">
  <div class="max-w-6xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="flex flex-col flex-wrap items-start justify-center md:flex-row">
      {% assign cards_block = section.blocks | where: 'type', 'cards' %}
      {% for cardMain in cards_block %}
        {% assign card = cardMain.settings %}
        <div key="{card.id}" class="relative flex flex-col justify-center w-full p-2 md:p-3 md:w-1/3">
          {%- if card.image -%}
            <div class="flex items-center justify-center w-full h-auto text-white bg-transparent rounded-md">
              <img
                class="object-contain object-right w-full h-full"
                width="100%"
                height="100%"
                src="{{ card.image | img_url: 'master' }}" 
              >
            </div>
          {%- endif -%}
          {%- if card.title -%}
            <div>
              <p class="mt-2 font-bold leading-9 text-black text-28 text-start">{{ card.title }}</p>
              <p class="mt-4 text-base text-black text-start">
                {{ card.description }}
              </p>
            </div>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text Column TW",
  "settings": [],
  "blocks": [
    {
      "type": "cards",
      "name": "Card",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}

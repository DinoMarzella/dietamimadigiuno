{% assign data = section.settings %}
<!-- TWEasySteps -->
<div class="w-full pt-12 pb-20 bg-tarnspatrent font-harmonia">
  <div class="w-full px-4 mx-auto md:w-11/12 sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="my-2 text-4xl font-normal leading-10 tracking-tight text-saladGreen sm:text-6xl">{{ data.title }}</p>
    </div>

    <div class="mt-10 md:mt-20">
      <dl class="flex flex-col flex-wrap items-center justify-around md:flex-row">
        {% assign cards_block = section.blocks | where: 'type', 'cards' %}
        {% for cardMain in cards_block %}
          {% assign card = cardMain.settings %}

          <div class="relative p-4 mx-0 my-3 border-2 border-black border-solid rounded-full w-90 h-90 md:my-0 md:mx-3 md:p-4">
            <div
              class="flex flex-col items-center justify-center w-full h-full p-4 rounded-full"
              style=" background-color: #f5f5f5"
            >
              <p class="text-3xl font-semibold leading-6 text-center text-saladGreen" style="line-height:1.4">
                {{ card.title }}
              </p>
              <div class="mt-4 text-lg leading-6 tracking-tight text-center text-black">
                {{ card.description }}
              </div>
            </div>
          </div>
        {% endfor %}
      </dl>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Easy Steps TW",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Title"
    }
  ],
  "blocks": [
    {
      "type": "cards",
      "name": "Card",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="pt-24 pb-32 overflow-hidden bg-blueGray-50">
  <div class="px-4 mx-auto max-w-container">
    <span class="inline-block mb-3 text-sm font-semibold leading-snug uppercase text-prolon_green tracking-px"
      >Step Into The World of Fasting
    </span>
    <h2 class="mb-6 text-3xl font-bold leading-none md:text-3xl xl:text-5xl font-heading tracking-px-n">
      Science Backed. 20 Years of Research.
    </h2>
    <div class="flex flex-wrap justify-between mb-16 -m-4">
      <div class="w-auto p-4">
        <div class="md:max-w-3xl">
          <p class="text-lg font-medium leading-relaxed text-gray-900">
            From first time fasters to advanced fasters, we have a way to integrate fasting into your healthy lifestyle.
            Take a break from mindless eating, high-calorie diets, sugar, and carbs and start your fasting journey.
          </p>
        </div>
      </div>
    </div>
    <div class="overflow-hidden border border-blueGray-200 rounded-3xl">
      <div class="flex flex-wrap divide-y md:divide-x lg:divide-y-0 divide-blueGray-200">
        {% for block in section.blocks %}
          <div class="w-full md:w-1/2 lg:w-1/4">
            <div class="h-full pt-8 bg-white px-9 pb-11 bg-opacity-90" style="backdrop-filter: blur(46px);">
              {% if forloop.index == 2 %}
                <img
                  class="-right-[10rem] -top-[100px] absolute right-0 right-8 top-0 z-10"
                  src="https://cdn.shopify.com/s/files/1/0508/0625/9870/files/gradient5_0f9e897a-357d-465a-bcad-adbed81fb4ef.svg?v=1665696404"
                  alt=""
                >
              {% endif %}
              <div class="relative z-10">
                <span class="inline-block mb-3 text-sm font-semibold leading-snug uppercase text-prolon_green tracking-px">
                  {{- block.settings.sub_type -}}
                </span>
                <p class="mb-6 font-medium leading-relaxed text-gray-500">
                  {{- block.settings.sub_heading -}}
                </p>
                <h3 class="mb-1 text-4xl font-bold leading-tight text-gray-900">
                  <s class="text-gray-400">${{ block.settings.sub_compare_p }}</s>

                  <span>${{ block.settings.sub_price }}</span>
                </h3>
                <p class="mb-8 text-sm font-medium leading-relaxed text-gray-500">{{ block.settings.sub_saving }}</p>
                <picture class="block mb-4"
                  ><img src="{{block.settings.sub_image | img_url:'400x300', crop:'center' }}">
                </picture>
                <button
                  class="w-full py-4 font-medium text-white transition duration-200 ease-in-out border border-none bg-prolon_orange border-blueGray-300 focus:ring focus:ring-gray-50 hover:border-blueGray-400 mb-9 px-9 rounded-xl"
                  type="button"
                >
                  Get Started Now
                </button>
                {{ block.settings.sub_deshead }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Grid Try Prolon V1",
  "settings": [
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "html",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "sub_type",
          "label": "Offer Type",
          "default": "Premium"
        },
        {
          "type": "html",
          "id": "sub_heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "sub_price",
          "label": "Price"
        },
        {
          "type": "text",
          "id": "sub_compare_p",
          "label": "Compare at price"
        },
        {
          "type": "text",
          "id": "sub_saving",
          "label": "Saving"
        },
        {
          "type": "image_picker",
          "id": "sub_image",
          "label": "Image"
        },
        {
          "type": "html",
          "id": "sub_deshead",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "subbtn_text",
          "label": "Button Text"
        },
        {
          "type": "text",
          "id": "sub_gurantee",
          "label": "Subscription Gurantee"
        },
        {
          "type": "text",
          "id": "variant_id_original",
          "label": "Variant Id Original"
        },
        {
          "type": "text",
          "id": "variant_id_new_flavor",
          "label": "Variant Id New Flavor"
        },
        {
          "type": "text",
          "id": "subscription_id",
          "label": "Selling Plan Id"
        }
      ]
    }
  ]
}
{% endschema %}

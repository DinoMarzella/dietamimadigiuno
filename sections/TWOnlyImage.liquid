{% assign data = section.settings %}
<!-- TWOnlyImage -->

<div class="relative overflow-hidden bg-white {% if data.under_header %} {% endif %}" >
  <div class="w-full sm:overflow-hidden"> 
          <img class="hidden object-cover object-center w-full h-full md:block md:object-top"  style="max-height:{{data.max_height}}" width='100%' height='100%' src={{ data.desktop_image | img_url: 'master'  }} />
          <img class="block object-cover object-center w-full h-full md:hidden md:object-top"  style="max-height:{{data.max_height}}" width='100%' height='100%' src={{ data.mobile_image | img_url: 'master'  }} />
  </div>
</div>

{% schema %}
{
    "name": "Only Image TW",
    "settings": [
       
       {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
          },
          {
        "type": "text",
        "id": "max_height",
        "label": "Max Height"
      },
      {
            "type": "checkbox",
            "id": "under_header",
            "label": "Under Header"
      }
    ]
  }
{% endschema %}
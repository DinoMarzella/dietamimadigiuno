<div class="flex w-full  bg-[#9a4f1b]">

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <p class="block md:hidden show-navigation-mobile text-white py-2 relative font-bold" >
            {{ section.settings.title }} 
                <svg aria-hidden="true" viewBox="0 0 8 6" width="8" height="6" fill="white"
                class="pointer-events-none absolute inset-y-0 -right-[16px] h-full stroke-white">
                <path d="M7 1.5l-3 3-3-3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </p>
        <div class="hidden md:!grid grid-cols-1 md:grid-cols-5  divide-x divide-gray-900/5 border-x border-gray-900/5 mobile-navigation-list">
            {% for link in section.settings.menu.links %}
            <a href="{{ link.url }}"
                class="flex items-center justify-center gap-x-2.5 p-3 text-sm font-semibold leading-6 text-white hover:bg-gray-100"> 
                {% comment %} <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd"
                        d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm6.39-2.908a.75.75 0 01.766.027l3.5 2.25a.75.75 0 010 1.262l-3.5 2.25A.75.75 0 018 12.25v-4.5a.75.75 0 01.39-.658z"
                        clip-rule="evenodd"></path>
                </svg> {% endcomment %} 
                <span>{{ link.title }}</span>
            </a>
            {% endfor %}
       

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $(".show-navigation-mobile").click(function () {
            $(".mobile-navigation-list").toggleClass("hidden");
        });
    });
</script>


{% schema %}
{
"name": "Secondary Navigation",
"settings": [
{
"type": "text",
"id": "title",
"label": "Mobile Title"
},
{
"type": "link_list",
"id": "menu",
"label": "Menu"
}
]
} 
{% endschema %}
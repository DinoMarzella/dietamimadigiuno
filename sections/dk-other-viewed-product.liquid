<script>
    $(document).ready(function () {
        $('.slider-container-v2').slick({
            infinite: false,
            slidesToShow: 4, // Default for large screens
            slidesToScroll: 1,
            prevArrow: $('.prev-slidee-2'),
            nextArrow: $('.next-slidee-2'),
            dots: true, // Enable dots navigation
            customPaging: function (slider, i) {
                return '<button class="dot"></button>';
            },
            responsive: [
                {
                    breakpoint: 1250, // lg breakpoint
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1,
                    },
                },
                {
                    breakpoint: 768, // md breakpoint
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                    },
                },
                {
                    breakpoint: 500, // sm breakpoint
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1,
                    },
                },
            ],
        });
    });
</script>


<style>
    .slick-prev,
    .slick-next {
        display: block !important;
        background: none !important;
        color: #5D7E11 !important;
    }

    .prev-slidee-2,
    .next-slidee-2 {
        z-index: 50;
        /* Ensure arrows appear on top */
    }

    /* Styling for dots navigation */
    .slick-dots li button:before {
        font-size: 12px;
        color: #5D7E11;
        /* Green color for the dots */
    }

    .slick-dots {
        bottom: -30px;
        /* Adjust position */
    }

    .slick-dots li {
        margin: 0 5px;
        /* Spacing between dots */
    }

    .slick-dots li.slick-active button:before {
        opacity: 1;
        color: #5D7E11;
    }

    .card {
        margin: 0 10px;
        overflow: hidden;
    }

    .carousel-slide {
        display: flex;
        justify-content: center;
        /* Center slides */
    }
</style>


<section class="">
    <div
        class="max-w-[1600px] md:py-[64px] md:mb-[26px] py-[10px] flex  flex-col items-center justify-center mx-auto px-4">
        <h1 class=" md:text-[35px] text-center font-light py-[20px] md:pb-[4rem] text-[25px]" >{{ section.settings.section_title }}</h1>
        <div class="relative flex items-center justify-center w-full md:w-[90%]">

            <div class="w-full overflow-hidden slider-container-v2">
                {% for block in section.blocks %}
                {% assign product = block.settings.product %}
                <div class="flex items-center justify-center flex-shrink-0 w-full h-full gap-2 carousel-slide lg:w-1/3">
                    <div class="mx-auto !mb-4 bg-white rounded-lg min-h-[300px] card shadow-lg">
                        <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}"
                            class="object-cover w-full min-h-[210px] max-h-[210px] mb-4">
                        <h3 class="text-[16px] md:text-[20px] font-semibold text-center">{{ product.title }}</h3>
                        <div class="py-2 text-center text-gray-700 text-[12px] md:text-[15px]">{{ block.settings.description   }}</div>
                        <div class="py-1 text-center text-[16] md:text-[20px] font-bold price">
                            {{ product.price |  money }}  </div>
                        <div class="flex items-end justify-center my-2 mb-[20px]">
                        <a href="{{ product.url }}"
                            class="prerender inline-block w-fit px-8 py-3 md:text-[16px] text-[12px] justify-center items-center   leading-4 font-[600] text-center rounded-[6px] shadow-sm hover:bg-[#77A117] bg-[#77A117]  text-white border border-gray-300">
                            Shop Now
                        </a></div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <button type="button" class="absolute left-0 p-2 -translate-y-1/2 bg-white rounded-full shadow-md top-1/2"
                @click="prevSlide">
                <svg class="w-6 h-6 cursor-pointer !text-[#5D7E11] !top-[11px] prev-slidee-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <button type="button" class="absolute right-0 p-2 -translate-y-1/2 bg-white rounded-full shadow-md top-1/2"
                @click="nextSlide">
                <svg class="w-6 h-6 cursor-pointer !text-[#5D7E11] !top-[11px] next-slidee-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>
</section>








<section>

  <div class="py-6 lg:overflow-hidden font-harmonia md:py-12" style="background-color: #ffffff">

    <div class="mx-auto max-w-screen-2xl lg:px-8">
      <div class="flex flex-col items-center justify-center md:flex-{{ section.settings.left_right }} ">
        <div class="w-full max-w-2xl px-4 mx-auto sm:px-6 lg:flex lg:items-center lg:px-0 md:w-1/2">
          <div class="">
            <p class="px-5 text-sm font-light tracking-tight text-center md:px-10 md:text-left font-harmonia"> </p>
            <h2
              class="px-5 my-4 text-3xl font-bold tracking-tight text-center md:px-10 md:text-left md:text-4xl sm:my-5 lg:my-6">
              <span class="block text-center text-black md:text-left font-avant">
                <div class="flex flex-col items-center text-center jusity-center">
                  <img class="w-28"
                    src="{{ section.settings.image2 | img_url: '1600x' }}">

                  {{ section.settings.text_title }}
                </div>
              </span>
            </h2>
            <div class="px-5 text-lg text-left text-black md:px-10 font-avenir">
              <p class="text-center">{{ section.settings.text_box1 }} </p>
            </div>
            <div class="items-start justify-start w-full max-w-sm px-5 mx-auto mt-5 md:px-10 sm:flex sm:max-w-none">
            </div>
          </div>
        </div>
        <div class="relative w-full py-6 mx-auto md:py-0 md:w-1/2" style="max-width:500px">


          <img class="object-cover object-right w-full h-full" width="100%" height="100%"
            src="{{ section.settings.image1 | img_url: '1600x' }}">


        </div>
      </div>
    </div>
  </div>


</section>
{% schema %}
{
"name": "live-liveintent-sub",
"settings": [


{
"type": "image_picker",
"id": "image1",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "image2",
"label": "Number of Days subscription"
},
{
"type": "text",
"id": "text_title",
"label": "Days Name"
},
    {
    "type": "textarea",
    "id": "text_box1",
    "label": "Description"
    },

{
"type": "select",
"id": "left_right",
"label": "Image Position",
"options": [
{
"value": "row",
"label": "Left"
},
{
"value": "row-reverse",
"label": "Right"
}
]
}
],
"presets": [
{
"name": "live-liveintent-sub"
}
]
}
{% endschema %}
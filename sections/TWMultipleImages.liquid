{% assign data = section.settings %}

<!-- TWMultipleImages -->
<div class="w-full font-harmonia">
  <div class="w-full">
      <dl class="flex flex-row flex-wrap items-stretch justify-center">

        {% assign cards_block= section.blocks | where: 'type', 'cards' %}
        {% for cardMain in cards_block %}
          {% assign card = cardMain.settings %}
          <div key={card.id} class="relative w-full" style="max-width: {{card.max_width}}">
            <div class="object-cover w-full h-full">
                <img class="object-cover object-right w-full h-full md:object-center" width='100%' height='100%' src={{ card.image | img_url: 'master'  }} />
            </div>
        </div>
        {% endfor %}
      </dl>
  </div>
</div>

{% schema %}
{
    "name": "Multiple Images TW",
    "settings": [
      
    ],
    "blocks": [
      {
        "type": "cards",
        "name": "Card",
        "settings": [
          {
            "type": "text",
            "id": "max_width",
            "label": "Max Width"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
{% assign data = section.settings %}
<!-- TWVideoWithTextV1 -->
<div class="py-6 bg-white md:py-12 lg:overflow-hidden">
  <div class="mx-auto max-w-screen-2xl lg:px-8">
    <div class="flex flex-col justify-center items-strech md:flex-row">
      <div class="relative w-full px-2 md:w-1/2">
        <div class="z-10 overflow-hidden rounded-lg bg-champagneLight">
          <img
            class="object-cover  w-full h-full cursor-pointer md:min-h-[520px] object-center "
            width="100%"
            height="100%"
            src="{{ data.image | img_url: '600x' }}"
          >
        </div>
        <div class="absolute top-0 left-0 z-20 flex items-center justify-center w-full h-full">
          <div class="flex items-center justify-center w-20 h-20 overflow-hidden transition-all bg-white rounded-full cursor-pointer hover:scale-125">
            <div>
              <svg width="12" height="16" viewBox="0 0 12 16" fill="none">
                <path d="M11.7128 7.43108L0.913011 0.0978286C0.822045 0.0360615 0.717912 0.00233463 0.611323 0.000116903C0.504734 -0.00210083 0.399537 0.0272708 0.306554 0.0852106C0.213571 0.14315 0.136159 0.227566 0.0822796 0.329775C0.0284005 0.431984 4.80177e-08 0.548295 0 0.666745V15.3333C4.80177e-08 15.4517 0.0284005 15.568 0.0822796 15.6702C0.136159 15.7724 0.213571 15.8568 0.306554 15.9148C0.399537 15.9727 0.504734 16.0021 0.611323 15.9999C0.717912 15.9977 0.822045 15.9639 0.913011 15.9022L11.7128 8.56892C11.8006 8.50936 11.873 8.42576 11.9233 8.32614C11.9736 8.22652 12 8.11422 12 8C12 7.88578 11.9736 7.77348 11.9233 7.67386C11.873 7.57424 11.8006 7.49064 11.7128 7.43108Z" fill="#22202F"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div class="w-full px-2 overflow-hidden md:w-1/2">
        <div class="w-full h-full px-4 rounded-lg mx-automax-w-2xl sm:px-6 md:text-left lg:flex lg:items-center lg:px-0 lg:text-left bg-champagneLight">
          <div class="px-4 py-4 md:px-8">
            <h1 class="mb-4 text-3xl tracking-wider text-center md:text-left md:text-5xl sm:mb-5 lg:mb-6 font-avenir">
              <span class="block text-black" style="text-transform: none;">{{ data.title }}</span>
            </h1>
            <div class="p-1 text-base text-black font-dinamoRegular">
              {{ data.description }}
            </div>
            <div class="justify-center max-w-sm mx-auto mt-5 sm:flex sm:max-w-none md:justify-start">
              <a
                href="{{data.btn_link}}"
                class="flex items-center justify-center px-5 py-3 text-base text-center text-white rounded font-dinamoRegular w-max bg-prolon_green hover:bg-prolon_green"
              >
                <span class="w-full">Our Story</span>
                <div class="pl-2">
                  <svg width="14" height="12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fillRule="evenodd" clipRule="evenodd" d="M8.354.646a.5.5 0 1 0-.708.708l4.146 4.145H1a.5.5 0 1 0 0 1h10.794l-4.148 4.147a.5.5 0 0 0 .708.708l5-5a.5.5 0 0 0 0-.708l-5-5Z" fill="#fff"></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Text V1 TW",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "textarea",
      "id": "iFrame_html",
      "label": "iFrame Html"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Url"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}

{% assign data = section.settings %}
<!-- TWImageWithBlocks -Haider -->
<section class="relative">
    <div class="mx-auto">
      <div class="flex flex-col items-center w-full bg-white md:flex-row">
        <div class="flex w-full">
          <img src="{{data.bimage | img_url: '2000x'}}" class="w-full align-middle">
        </div>
        <div class="w-full px-4 py-4">
          <div class="flex flex-wrap">
            
            <div class="w-full px-4 md:w-6/12">
                {% for block in section.blocks %}
                {% if block.type == 'card' %}
              <div class="relative flex flex-col mt-4">
                <div class="flex-auto px-4 py-5">
                  <div class="w-12 h-12">
                    <img src="{{block.settings.iconsvg | img_url: '2000x'}}" />
                  </div>
                  <h6 class="mb-1 text-xl font-semibold tracking-normal normal-case">{{block.settings.title}}</h6>
                  <p class="mb-4 text-blueGray-500">{{block.settings.minides}}</p>
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>
            <div class="w-full px-4 md:w-6/12">
            {% for block in section.blocks %}
            {% if block.type == 'cardp' %}
              <div class="relative flex flex-col min-w-0 mt-4">
                <div class="flex-auto py-5">
                  <div class="w-12 h-12">
                    <img src="{{block.settings.svgicon | img_url: '2000x'}}" />
                  </div>
                  <h6 class="mb-1 text-xl font-semibold tracking-normal normal-case">{{block.settings.title}}</h6>
                  <p class="mb-4 text-blueGray-500">{{block.settings.descpro}}</p>
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>
            
          </div>
        </div>
      </div>
    </div>
    </section>

    {% schema %}
{
    "name": "Image With Blocks TW",
    "settings": [
    {
        "type": "image_picker",
        "id": "bimage",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "iconsvg",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "html",
            "id": "minides",
            "label": "details"
          }
        ]
      },
      {
        "type": "cardp",
        "name": "Card Second",
        "settings": [
          {
            "type": "image_picker",
            "id": "svgicon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "html",
            "id": "descpro",
            "label": "details"
          }
        ]
      }
    ]
  }
{% endschema %}
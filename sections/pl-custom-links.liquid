{%- assign data = section.settings -%}

<div  class="w-full bg-[#fff] overflow-hidden pl-wrapper-custom-links">
  <div class="w-full max-w-[1300px] mx-auto">
    <div class="flex flex-col md:flex-row items-start justify-center">
      <div class="w-full md:w-[100%] px-[20px] mb-[40px] md:mb-0 pb-[50px] md:pb-[100px] ">
        <p
          class="mb-[20px] text-[16px] md:text-[18px] text-black font-normal hero__animation-contents !delay-500"
        >{{data.description}}</p>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    addClassInViewSequentially('pl-wrapper-custom-links');
  });
</script>

{% schema %}
{
  "name": "PL Custom Links",
  "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
  ],
  "presets": [
    {
      "name": "PL Custom Links",
      "category": "Advanced layout"
    }
  ]
}
{% endschema %}

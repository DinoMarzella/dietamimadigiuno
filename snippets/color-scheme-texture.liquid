{% comment %}
  Images:
    - space
    - paper
    - marble
  SVG:
    - swirl
    - squiggle
  CSS:
    - darken
{% endcomment %}
{%- capture key -%}color_scheme_{{ color_scheme }}_texture{%- endcapture -%}
{%- assign texture = settings[key] -%}
{%- if key == 'color_scheme_3_texture' -%}
  {%- assign texture = 'minimal-wave' -%}
{%- endif -%}
{%- if texture == 'space.jpg' or
       texture == 'paper.jpg' or
       texture == 'marble.jpg' -%}
  {% assign img_url = texture | asset_img_url: '1600x'%}
  <img class="lazyload scheme-image"
      aria-hidden="true"
      data-src="{{ img_url }}"
      data-texture="{{ texture }}"
      data-widths="[360, 540, 720, 900, 1080]"
      data-sizes="auto">
{%- else -%}
  <div class="scheme-{{ texture }}"></div>
{%- endif -%}

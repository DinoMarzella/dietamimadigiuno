<script>
  document.addEventListener("DOMContentLoaded", function () {
    $(".variant__input-32593125703726").trigger("click");
    let orignalTrustImage = $(".trust-image").data("original-image");
    let secndImage =
      "https://cdn.shopify.com/s/files/1/0126/2921/3243/files/Single_Box_-_50_off.png?v=1609968321";
    $('input[name="Quantity"][value*="Subscribe & Save"]').click();
    $("input[type=radio][name=Quantity]").change(function () {
      $('shopify-payment-terms').addClass('active');
      $(".trust-image img")
        .show()
        .attr("src", orignalTrustImage)
        .removeAttr("srcset");
      if (this.value.includes("Single Prolon Order")) {
        //$('.trust-image').hide();
        $(".trust-image img") 
          .show()
          .attr("src", secndImage)
          .removeAttr("srcset");
      }

      if (this.value.includes("Subscribe & Save")) {
        $('shopify-payment-terms').removeClass('active'); 
        addSubscriptionOptions();
      } else { 
        //$( "#subscription_plans").remove();
        $("input,select", ".simple-sub-plan").attr("name", "");
      }
    });
    $("input[type=radio][name=Quantity]").each(function () {
      if (this.value.includes("Subscribe & Save")) {
        if ($(this).prop("checked")) {
          addSubscriptionOptions();
        }
      } else {
        $("input,select", ".simple-sub-plan").attr("name", "");
        //$( "#subscription_plans" ).remove();
      } 
    });
  });

  function addSubscriptionOptions() {
    $(".simple-sub-plan").remove();
    $(`form fieldset[name=Quantity] [data-value*="Subscribe"]`).append(
      '<div id="subscription_plans" class="simple-sub-plan" style="margin-left: 4px;">' +
        '<input type="hidden" name="properties[shipping_interval_unit_type]" value="Months">' +
        '<input type="hidden" name="properties[number_charges_until_expiration]" value="">' +
        '<select name="properties[shipping_interval_frequency]">' +
        '  <option data-charge_interval_frequency="1" value="1" data-end="0">Deliver every month</option>' +
        '  <option data-charge_interval_frequency="3" value="3" data-end="0">Deliver every 3 months</option>' +
        "</select>" +
        "</div>"
    );
  }

  setTimeout(function () {
    $('.variant__input-4634645430318[value*="Subscribe"]').click();
    addSubscriptionOptions();
  }, 50);

  $(window).load(function () {
    $('input[name="Quantity"][value*="Subscribe & Save"]').click();
    setTimeout(function () {
      $('.variant__input-4634645430318[value*="Subscribe"]').click();
      addSubscriptionOptions();
    }, 50);
  });
</script>

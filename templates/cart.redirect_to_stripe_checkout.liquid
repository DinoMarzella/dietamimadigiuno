{% layout "theme.tw" %}
<style>
  [v-cloak] {
    opacity: 0.1;
  }

  [v-cloak][v-cloak-hide] {
    display: none;
  }
</style>
<div id="cart-with-header">
  <div class="max-w-[1600px] w-full py-3 px-2 md:p-8 mx-auto">
    <h2 class="text-[30px] mb-3 font-medium  py-4 md:py-0 md:px-0">Shopping Cart </h2>
    <div class="flex flex-col w-full gap-4 lg:flex-row">
      <div class="lg:w-7/12">
        <div class="lg:p-10 bg-cart">

          {% render 'king-cart-items-life' %}
          {% render 'king-empty-cart' %}
        </div>
        <div class="flex flex-col items-center mt-2">

          <div class="flex items-center mb-4 lg:mb-8 w-[100%]">
            {%
            render 'king-cart-recommendations'
            %}
          </div>
        </div>
      </div>
      <div class=" lg:w-5/12 lg:pl-5">
        <div class="mb-4 lg:mb-8">
          <h2>Summary</h2>
          {% render 'king-free-shipping-bar' %}
          <div class="flex flex-col">
            <div class="flex justify-between mb-1 lg:mb-2">
              <p>Sub Total </p>
              <p v-if="provider_code" class="text-[20px] font-bold"
                v-text='cartTotal>0? money(cart.original_total_price) : "-"'></p>
              <p v-else class="text-[20px] font-bold" v-text='cartTotal>0? money(cartTotal) : "-"'></p>

            </div>
          </div>
          <div class="flex flex-col">
            <div class="flex justify-between mb-1 lg:mb-2">
              <p>Shipping</p>

              <p class="text-sm" v-if="gotFreeShippingMessage!=''" v-text="gotFreeShippingMessage"></p>
              <p class="text-sm" v-else>Shipping will be calculated at checkout</p>
            </div>
          </div>
          <div class="pt-2 border-t">
            <p class="mt-0.5 text-[11px] text-gray-500 block">Cliccando sul pulsante di checkout qui sotto, dichiaro di accettare
              the <a href="/pages/condizioni-di-vendita" target="_blank"
                class="text-gray-700 underline terms-link js-no-transition">Termini e condizioni</a>&nbsp; &amp; &nbsp; <a
                href="/pages/avvertenze-per-i-consumatori" target="_blank"
                class="text-gray-700 underline terms-link js-no-transition">Avvertenze per i consumatori</a>.</p>
          </div>

          <form v-if="cartTotal>0" class="w-full pt-2 mt-5 border-t " @submit.prevent="applyDiscount()">
            <div v-if="ShowDiscountFailedMessage" class="py-3 text-center " v-cloak>
              <div class="px-3 text-black animated flash last-minute-coupon sm:px-6">
                Sorry <b>"${discountCode}"</b> is not a valid code.<br>
              </div>
            </div>
            <div class="flex items-center justify-between mb-1 lg:mb-2 " v-cloak v-if="provider_code">
              <h3 class="leading-3 whitespace-nowrap"><a class="text-sm">HCP CODE

                </a></h3>
              <p class="text-[20px] font-bold">
                <span v-text='provider_code' class="capitalize"></span>
                <span>(20% Off)</span>
                <button class="hidden" @click.prevent="clearProviderCode">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                    <path fill-rule="evenodd"
                      d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z"
                      clip-rule="evenodd"></path>
                  </svg>
                </button>
              </p>

            </div>
            <div class="flex items-center justify-between mb-1 lg:mb-2" v-if="provider_code">
              <h3 class="leading-3 whitespace-nowrap"><a class="text-sm">TOTAL

                </a></h3>
              <p class="text-[20px] font-bold">
                <s v-text='cartTotal>0? money(cart.original_total_price) : "-"' class="mr-2 text-gray-400">
                </s>
                <span v-text='cartTotal>0? money(cart.original_total_price*.8) : "-"'>
                </span>
              </p>
            </div>
            <div v-else v-cloak class="flex items-center justify-between mb-1 lg:mb-2"
              v-if="cart.original_total_price>cartTotal">
              <h3 class="leading-3 whitespace-nowrap">
                <a class="text-sm">TOTAL
                </a>
              </h3>
              <p class="text-[20px] font-bold">
                <s v-text='cartTotal>0? money(cart.original_total_price) : "-"' class="mr-2 text-gray-400">
                </s>
                <span v-text='cartTotal>0? money(cartTotal) : "-"'>
                </span>
              </p>
              {% comment %} <h3 class="mb-2 leading-3 whitespace-nowrap"><a class="text-sm">Enter your Discount here.

                </a></h3>
              <div class="flex w-full">

                <input type="text" name="discount_code" id="discount_code"
                  class="block border-gray-300 rounded-none p-0 px-1 px-1.5 py-0 py-1 py-10 py-12 py-14 py-2 py-3 py-4 py-5 focus:outline-none py-[ py-[10 py-[10px] py-[8px] shadow-sm sm:text-sm w-full"
                  placeholder="Code ex: COUPON12" v-model="discountCode">

                <button type="submit"
                  class="inline-flex items-center justify-center w-full px-4 py-2 font-medium text-white border border-transparent shadow-sm backdrop-blur-lg bg-prolon_secondary focus:outline-none focus:ring-2 focus:ring-prolon focus:ring-offset-2 hover:bg-prolon sm:mt-0 sm:text-sm sm:w-auto"
                  data-dashlane-rid="0d87ba6748658402">

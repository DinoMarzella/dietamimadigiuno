<script>
  $(document).ready(function () {
    $(".hero-banner").click(function () {
      $("html, body").animate(
        { scrollTop: $("#product-choice").offset().top-50  }, 
        300 
      );
    });

    $(document).on('click',".select-product-and-process",function () {
      //code test 2
      let context = $(this); 
      let mainsection = context.closest('.add-to-cart-section');
      let option2 = $(this).closest('.single-product-wrapper').attr("data.option"); 
      context.find(".btn").text("Adding...");
      let flavor= mainsection.find('.flavor-type:checked').val();
      $(`input[data-index="option2"][value="${flavor}"]`).click();
 
      $(
        `.variant-input-radio-wrap input[name="Quantity"][value="${option2}"],.variant-input-wrap input[name="Quantity"][value="${option2}"]`
      ).click();
  
      setTimeout(function () {
        $(".add-to-cart").click();
      }, 50);
      setTimeout(function () {
        context.find(".btn").text("AGGIUNGI AL CARRELLO");
      }, 1000);
    });


    $('.do-add-to-cart').click(function(){
      $(this).closest('.single-product-wrapper').find(".select-product-and-process").click();
    });  
    $('[name="subscription_cart"]').click(function () {
      let val = $(this).val();

      $("select.shipping_interval_frequency").val(val).change();
    });
 
    $('.flavour-description').html(`<p><strong>Soups:</strong> Vegetable, Minestrone, Vegetable Quinoa,&nbsp;<br>Mushroom, Tomato</p>`);
    $('.flavor-type').click(function(){

      let currentFlavour= $(this).closest('.add-to-cart-section').find('.flavor-type:checked').val(); 
      if(currentFlavour=='Original')
      { 
        $(this).closest('.add-to-cart-section').find('.flavour-description').html(`<p><strong>Soups:</strong> Vegetable, Minestrone, Vegetable Quinoa,&nbsp;<br>Mushroom, Tomato</p>`);
      }
      else{ 
        $(this).closest('.add-to-cart-section').find('.flavour-description').html(`<p><strong>New Soup Flavors:</strong> Butternut Squash, Black Bean, Butternut Squash Quinoa, Spinach &amp; White Bean, Tomato</p>`);
        
      }

    }); 
 
 });
</script>
